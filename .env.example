AUTH_URL="<your_auth_url>"

#NODEJS
DEBUG= "<true/false>"
PORT="<your_port>"
NODE_ENV="<production/development>"

#NEXTJS
ANALYZE = "<true/false>"

#SHOPIFY
SHOPIFY_SHOP_NAME="<your_shop_name>"
SHOPIFY_API_KEY="<your_shopify_api_key>"
